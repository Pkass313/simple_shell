#include <stdio.h>
#include <stdlib.h>
#include <unistd.h>
#include <string.h>
#include <sys/wait.h>

#define MAX_COMMAND_LENGTH 256
#define MAX_ARGUMENTS 16

/**
 * Display the prompt.
 */
void display_prompt() {
    printf("simple_shell$ ");
}

/**
 * Execute the command entered by the user.
 *
 * @param command The command entered by the user.
 * @param arguments The arguments for the command.
 * @param num_arguments The number of arguments.
 * @param path The PATH environment variable.
 * @return 1 if the command is the exit built-in, 0 otherwise.
 */
int execute_command(const char *command, char *arguments[], int num_arguments, const char *path) {
    if (strcmp(command, "exit") == 0) {
        return 1;
    }

    char command_path[MAX_COMMAND_LENGTH];
    char *token = strtok((char *)path, ":");

    while (token != NULL) {
        snprintf(command_path, sizeof(command_path), "%s/%s", token, command);

        if (access(command_path, X_OK) == 0) {
            pid_t pid = fork();

            if (pid == 0) {
                // Child process
                arguments[num_arguments] = NULL;
                execv(command_path, arguments);
                exit(EXIT_SUCCESS);
            } else if (pid > 0) {
                // Parent process
                wait(NULL);
                return 0;
            } else {
                // Error forking process
                perror("fork");
                return 0;
            }
        }

        token = strtok(NULL, ":");
    }

    printf("Command not found: %s\n", command);
    return 0;
}

int main() {
    char command[MAX_COMMAND_LENGTH];
    char *arguments[MAX_ARGUMENTS];
    const char *path = getenv("PATH");

    while (1) {
        display_prompt();

        if (fgets(command, sizeof(command), stdin) == NULL) {
            // End of file (Ctrl+D) condition
            printf("\n");
            break;
        }

        // Remove trailing newline character
        command[strcspn(command, "\n")] = '\0';

        int num_arguments = 0;
        char *token = strtok(command, " ");

        while (token != NULL && num_arguments < MAX_ARGUMENTS - 1) {
            arguments[num_arguments] = token;
            token = strtok(NULL, " ");
            num_arguments++;
        }

        if (num_arguments > 0) {
            if (execute_command(arguments[0], arguments, num_arguments, path) == 1) {
                // The command is the exit built-in, so exit the shell
                break;
            }
        }
    }

    return 0;
}
